    <script>
        // JavaScript for handling comment submission and display
        document.getElementById('commentForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            // Get comment text from textarea
            var commentText = document.getElementById('commentText').value.trim();

            if (commentText !== '') {
                // Create new comment list item
                var listItem = document.createElement('li');
                listItem.classList.add('comment');

                // Create paragraph for comment text
                var commentPara = document.createElement('p');
                commentPara.textContent = commentText;
                listItem.appendChild(commentPara);

                // Add list item to comment list
                var commentList = document.getElementById('commentList');
                commentList.appendChild(listItem);

                // Clear textarea after submission
                document.getElementById('commentText').value = '';
            }
        });
    </script>
